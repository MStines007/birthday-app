  <% end %>
</div>

<div class="events-box">
  <h3>Events</h3>
    <ul>
      <% @collection.wiki_event_items.each do |attr| %>
        <li><%= "#{attr.event.gsub!("&ndash;",":")[0...-2]}" %></li>
      <% end %>
    </ul>
</div>
<br>

<div class="births-box">
<h3>Significant Births</h3>
  <ul>
    <% @collection.wiki_birth_items.each do |attr| %>
      <li><%= "#{attr.birth.gsub!("&ndash;",":")[0...-2]}" %></li>
    <% end %>
  </ul>
</div>
<div class="first-giphy-box">
  <iframe src="//giphy.com/embed/tnD8af8doAk1O?html5=true" width="480" height="361" frameBorder="0" webkitAllowFullScreen     mozallowfullscreen allowFullScreen></iframe>
</div>
<br>

<div class="holidays-box">
<h3>Holidays and Observances</h3>
<ul>
<% @collection.wiki_holiday_items.each do |attr| %>
  <li><%= "#{attr.holiday[0...-2]}" %><br></li>
<% end %>
</ul>
</div>
<br>
<div class="events-box">
<h3>New York Times headlines from the day you were born!</h3>
<p>
<ul>
	<% @collection.news_items.each do |news_item| %>
		<li><strong><%= "#{news_item.headline}" %></strong>: <%="#{news_item.snippet}" %><a href= <%"#{news_item.link.html_safe}"%>><%="#{news_item.link.html_safe}"%></a></li><br><p>
	<% end %>
</ul>
</div>



