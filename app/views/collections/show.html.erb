<div class="smallertron">
  <h1>Happy Birthday <%="#{@collection.to_name.titleize}"%>!!!!!!</h1>
</div>
<br>
<div class="date-box">
  <h3><%= @collection.date.to_formatted_s(:long_ordinal)[/[^,]+/]%> is the day!</h3>
</div>

<div class='email-box'>
  <%= form_tag "/collections/#{@collection.id}/send_email", method: 'post' do %>
