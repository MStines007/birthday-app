		<%= f.label :from_name, :value => "What is your name?" %>
		<%= f.text_field :from_name %><br>

		<%= f.label :from_email, :value => "What is your e-mail address?" %>
		<%= f.text_field :from_email %><br>

		<%= f.submit "Send E-mail!" %>
	<% end %>
	
